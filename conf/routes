# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /terminals/discover                 controllers.GitHubTerminalController.discover()

POST        /terminals/activities/:activity     controllers.GitHubTerminalController.activities(activity: String)
POST        /terminals/authenticate             controllers.GitHubTerminalController.authenticate()

POST        /authentication/internal            controllers.GitHubTerminalController.authenticateInternal()
POST        /authentication/initial_url         controllers.GitHubTerminalController.initialUrl()
POST        /authentication/token               controllers.GitHubTerminalController.authenticateToken()

POST        /activities/configure               controllers.GitHubTerminalController.configureActivities()